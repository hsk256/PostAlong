<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ripple_test">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="mrl_rippleAlpha">0.09</item>
        <item name="mrl_rippleBackground">#fff</item>
    </style>

    <style name="tv_test">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="tv_test_left" parent="tv_test">
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
    </style>

    <style name="tv_test_right" parent="tv_test">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/dp_55</item>
    </style>

    <style name="iv_test_right">
        <item name="android:layout_width">@dimen/dp_48</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/dp_5</item>
        <item name="android:src">@mipmap/ic_arrow_right</item>
    </style>

    <!--——————系统信息————————-->
    <style name="ll_test_version_screen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/dp_48</item>
        <item name="android:background">#fff</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dp_15</item>
    </style>

    <style name="tv_test_version_screen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>

    </style>

    <style name="tv_test_version_screen.name" parent="tv_test_version_screen">
        <item name="android:textColor">#764e17</item>
    </style>

    <style name="tv_test_version_screen.value" parent="tv_test_version_screen">
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:textColor">#00921d</item>
    </style>
</resources>