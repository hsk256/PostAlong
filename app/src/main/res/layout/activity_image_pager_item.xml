<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/imageLoadFail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_30"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone" />

    <com.github.lzyzsd.circleprogress.DonutProgress
        android:id="@+id/circleLoading"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center"
        custom:donut_finished_color="@color/main_green_26a65b"
        custom:donut_finished_stroke_width="@dimen/dp_3"
        custom:donut_max="100"
        custom:donut_progress="30"
        custom:donut_text_color="@color/transparent"
        custom:donut_unfinished_stroke_width="@dimen/dp_3" />

</FrameLayout>