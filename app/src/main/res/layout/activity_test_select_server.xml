<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey_F7F7F7">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_toolbar"
        android:orientation="vertical">

        <View
            style="@style/h_line"
            android:layout_marginTop="@dimen/dp_10" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/rp_server_1"
            style="@style/ripple_test">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <TextView
                    style="@style/tv_test_left"
                    android:layout_centerVertical="true"
                    android:text="校园服务器" />

                <ImageView style="@style/iv_test_right" />
            </RelativeLayout>

        </com.balysv.materialripple.MaterialRippleLayout>

        <View style="@style/h_line" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/rp_server_2"
            style="@style/ripple_test">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <TextView
                    style="@style/tv_test_left"
                    android:layout_centerVertical="true"
                    android:text="亚马逊云服务器" />

                <ImageView style="@style/iv_test_right" />
            </RelativeLayout>

        </com.balysv.materialripple.MaterialRippleLayout>

        <View style="@style/h_line" />

        <!--自定义地址-->
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/rp_server_zi"
            style="@style/ripple_test">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <TextView
                    android:id="@+id/tv_ip_zi"
                    style="@style/tv_test_left"
                    android:layout_centerVertical="true"
                    android:text="自己输入ip和端口，如：172.22.118.10:8080" />

                <ImageView style="@style/iv_test_right" />
            </RelativeLayout>

        </com.balysv.materialripple.MaterialRippleLayout>

        <View style="@style/h_line" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前选择的是：" />

            <TextView
                android:id="@+id/tv_current_net"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="校园服务器"
                android:textColor="#098d17" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>