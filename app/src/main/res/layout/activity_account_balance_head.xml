<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_accounthead"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:text="0.00"
            android:textColor="@color/money_color_d92400"
            android:textSize="@dimen/text_size_48" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_18"
            android:text="@string/wallet_current_money"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>

    <View style="@style/h_line" />

    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="#ededeb"-->
        <!--android:paddingBottom="@dimen/dp_3"-->
        <!--android:paddingLeft="@dimen/dp_20"-->
        <!--android:paddingTop="@dimen/dp_3"-->
        <!--android:text="wallet function"-->
        <!--android:textColor="#8e8e8e"-->
        <!--android:textSize="@dimen/text_size_14" />-->

    <RelativeLayout
        android:id="@+id/ll_recharge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@drawable/btn_common"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_size_25"
            android:text="@string/wallet_recharge"
            android:textColor="@color/tv_black_1"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:id="@+id/create_order_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_arrow_right" />
    </RelativeLayout>

    <View style="@style/h_line" />

    <RelativeLayout
        android:id="@+id/ll_withdraw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@drawable/btn_common"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_size_25"
            android:text="@string/wallet_withdraw"
            android:textColor="@color/tv_black_1"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_arrow_right" />
    </RelativeLayout>


    <View
        style="@style/h_line"
        android:layout_height="@dimen/dp_8" />
</LinearLayout>