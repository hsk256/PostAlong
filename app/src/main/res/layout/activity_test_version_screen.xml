<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey_F7F7F7">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="vertical">

            <View style="@style/h_line" />

            <LinearLayout style="@style/ll_test_version_screen">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="屏幕信息："
                    android:textColor="#764e17"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/tv_screen"
                    style="@style/tv_test_version_screen.value"
                    android:text="1080P1080P1080P1080P1080P1080P1080P1080P1080P1080P1080P1080P1080P1080P1080P1080P1080P1080P1080P1080P" />
            </LinearLayout>

            <View style="@style/h_line" />

            <LinearLayout style="@style/ll_test_version_screen">

                <TextView
                    style="@style/tv_test_version_screen.name"
                    android:text="系统信息：" />

                <TextView
                    android:id="@+id/tv_version"
                    style="@style/tv_test_version_screen.value"
                    android:text="1080P" />
            </LinearLayout>

            <View style="@style/h_line" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>