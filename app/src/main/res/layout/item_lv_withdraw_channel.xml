<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_paypal_channel"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:layout_below="@+id/line1"
    android:paddingRight="@dimen/dp_25">

    <ImageView
        android:id="@+id/im"
        android:layout_width="@dimen/dp_33"
        android:layout_height="@dimen/dp_33"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_16"
        android:src="@mipmap/icon_paypal"/>

    <LinearLayout
        android:id="@+id/tv_payname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_toRightOf="@+id/im"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paypal_use"
            android:textColor="@color/main_black_333"
            android:textSize="@dimen/text_size_17"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pay"
            android:textColor="@color/tv_pay_color"
            android:textSize="@dimen/text_size_17"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pal"
            android:textColor="@color/tv_pal_color"
            android:textSize="@dimen/text_size_17"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_payname"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_toRightOf="@+id/im"
        android:text=""/>

    <ImageView
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"/>

    <ImageView
        android:id="@+id/iv_zhiwen"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_zhiwen_enable"/>
</RelativeLayout>