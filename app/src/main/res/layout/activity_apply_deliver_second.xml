<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey_F7F7F7"
    android:orientation="vertical">

    <include
        android:id="@+id/applytoolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/rl_certificationkind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_below="@+id/applytoolbar"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_certificationkind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/apply_photo_accord"
            android:textColor="#ff35a462" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_submit"
        android:layout_below="@+id/rl_certificationkind"
        android:layout_marginBottom="@dimen/dp_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center">

                <FrameLayout
                    android:id="@+id/fl_container_1"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="@dimen/dp_160">

                    <LinearLayout
                        android:layout_width="@dimen/dp_250"
                        android:layout_height="@dimen/dp_160"
                        android:background="@drawable/bg_tl_choose_address"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginTop="@dimen/dp_16"
                            android:src="@mipmap/icon_camera" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/apply_photo_tip_title"
                            android:textColor="@color/tv_name"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginRight="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_8"
                            android:text="@string/apply_photo_tip_content"
                            android:textColor="@color/tv_name"
                            android:textSize="@dimen/text_size_14" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_container_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/ll_case_1"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/sample_1"
                        android:layout_width="@dimen/dp_38"
                        android:layout_height="@dimen/dp_38"
                        android:src="@mipmap/icon_case" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/apply_photo_case"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center">

                <FrameLayout
                    android:id="@+id/fl_container_2"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="@dimen/dp_160">

                    <LinearLayout
                        android:layout_width="@dimen/dp_250"
                        android:layout_height="@dimen/dp_160"
                        android:background="@drawable/bg_tl_choose_address"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginTop="@dimen/dp_16"
                            android:src="@mipmap/icon_camera" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/apply_photo_tip_title"
                            android:textColor="@color/tv_name"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginRight="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_8"
                            android:text="@string/apply_photo_tip_content"
                            android:textColor="@color/tv_name"
                            android:textSize="@dimen/text_size_14" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_container_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/ll_case_2"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/sample_2"
                        android:layout_width="@dimen/dp_38"
                        android:layout_height="@dimen/dp_38"
                        android:src="@mipmap/icon_case" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/apply_photo_case" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center">

                <FrameLayout
                    android:id="@+id/fl_container_3"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="@dimen/dp_160">

                    <LinearLayout
                        android:layout_width="@dimen/dp_250"
                        android:layout_height="@dimen/dp_160"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:background="@drawable/bg_tl_choose_address"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginTop="@dimen/dp_16"
                            android:src="@mipmap/icon_camera" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/apply_photo_tip_title"
                            android:textColor="@color/tv_name"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginRight="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_8"
                            android:text="@string/apply_photo_tip_content"
                            android:textColor="@color/tv_name"
                            android:textSize="@dimen/text_size_14" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_container_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/ll_case_3"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/sample_3"
                        android:layout_width="@dimen/dp_38"
                        android:layout_height="@dimen/dp_38"
                        android:src="@mipmap/icon_case" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/apply_photo_case" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_submit"
        style="@style/ll_btn_bottom_common">

        <View style="@style/h_line" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/btn_submit"
            style="@style/ripple_btn_bottom_single_navy_blue">

            <TextView
                style="@style/tv_btn_bottom_blue_common"
                android:text="@string/common_submit" />
        </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>
</RelativeLayout>
