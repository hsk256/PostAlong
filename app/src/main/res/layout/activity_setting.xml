<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/toolbar" />

            <com.balysv.materialripple.MaterialRippleLayout style="@style/ripple_setting.no_delay">

                <RelativeLayout
                    android:id="@+id/rl_sound_notice"
                    style="@style/rl_setting">

                    <TextView
                        style="@style/tv_setting"
                        android:text="@string/setting_label_sound" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/sc_setting_sound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10" />
                </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <View style="@style/h_line" />

            <com.balysv.materialripple.MaterialRippleLayout style="@style/ripple_setting.no_delay">

                <RelativeLayout
                    android:id="@+id/rl_setting_vibrate"
                    style="@style/rl_setting">

                    <TextView
                        style="@style/tv_setting"
                        android:text="@string/setting_label_vibrate" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/sc_setting_vibrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10" />
                </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <!--<View style="@style/h_line" />-->

            <!--<com.balysv.materialripple.MaterialRippleLayout style="@style/ripple_setting.no_delay">-->

                <!--<RelativeLayout-->
                    <!--android:id="@+id/rl_setting_push"-->
                    <!--style="@style/rl_setting">-->

                    <!--<TextView-->
                        <!--style="@style/tv_setting"-->
                        <!--android:text="@string/setting_label_push_message" />-->

                    <!--<android.support.v7.widget.SwitchCompat-->
                        <!--android:id="@+id/sc_setting_push"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentEnd="true"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_marginEnd="@dimen/dp_10"-->
                        <!--android:layout_marginRight="@dimen/dp_10" />-->
                <!--</RelativeLayout>-->
            <!--</com.balysv.materialripple.MaterialRippleLayout>-->

            <View style="@style/shadow_line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/grayLight" />

            <View style="@style/h_line" />

            <com.balysv.materialripple.MaterialRippleLayout style="@style/ripple_setting.no_delay">

                <RelativeLayout
                    android:id="@+id/rl_clear_cache"
                    style="@style/rl_setting">

                    <TextView
                        style="@style/tv_setting"
                        android:text="@string/setting_label_cache" />

                    <TextView
                        android:id="@+id/tv_setting_cache_size"
                        style="@style/tv_setting"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:text="283.43KB" />
                </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <View style="@style/h_line" />

            <com.balysv.materialripple.MaterialRippleLayout style="@style/ripple_setting">

                <RelativeLayout
                    android:id="@+id/iv_help"
                    style="@style/rl_setting">

                    <TextView
                        style="@style/tv_setting"
                        android:text="@string/menu_operate_instructions" />

                    <ImageView
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_48"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/ic_arrow_right" />
                </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>


            <View style="@style/h_line" />

            <com.balysv.materialripple.MaterialRippleLayout style="@style/ripple_setting">

                <RelativeLayout
                    android:id="@+id/rl_about_us"
                    style="@style/rl_setting">

                    <TextView
                        style="@style/tv_setting"
                        android:text="@string/setting_label_about" />

                    <ImageView
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_48"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/ic_arrow_right" />
                </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <View style="@style/h_line" />

            <com.balysv.materialripple.MaterialRippleLayout android:id="@+id/dev_tool" style="@style/ripple_setting">

                <RelativeLayout
                    android:id="@+id/rl_test"
                    style="@style/rl_setting">

                    <TextView
                        style="@style/tv_setting"
                        android:text="开发人员工具箱" />

                    <ImageView
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_48"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/ic_arrow_right" />
                </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <View style="@style/h_line" android:id="@+id/dev_tool_line"/>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_logout"
        style="@style/ll_btn_bottom_common">

        <View style="@style/h_line" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/ripple_btn_bottom"
            style="@style/ripple_btn_bottom_single_red">

            <TextView
                style="@style/tv_btn_bottom_red"
                android:text="@string/setting_btn_logout" />

        </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>
</RelativeLayout>