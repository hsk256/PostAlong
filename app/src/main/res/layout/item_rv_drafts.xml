        <!--android:text="@string/common_edit"-->
        <!--android:textColor="@color/tv_draft_green"-->
        <!--android:background="@color/btn_draft_green"-->
        <!--android:textSize="@dimen/text_size_13" />-->

        <!--</com.balysv.materialripple.MaterialRippleLayout>-->

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_34"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_14"
            android:background="@drawable/bg_btn_draft"
            android:text="@string/common_remove"
            android:textAllCaps="false"
            android:textColor="@color/status_wait_pay"
            android:textSize="@dimen/text_size_14" />

        <View
            style="@style/h_line"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</com.balysv.materialripple.MaterialRippleLayout>