<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--<ImageView-->
        <!--android:id="@+id/background_img"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dp_200"-->
        <!--android:contentDescription="@null"-->
        <!--android:scaleType="fitXY"-->
        <!--android:src="@drawable/scrollview_header" />-->
    <ImageView
        android:id="@+id/background_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:background="@color/main_green_26a65b"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_55">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/head_pic"
                android:layout_width="@dimen/dp_84"
                android:layout_height="@dimen/dp_84"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/icon_default_head"
                app:border_color="@color/head_pic_border"
                app:border_width="@dimen/dp_2" />
        </RelativeLayout>
        <View style="@style/h_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:paddingLeft="@dimen/dp_16">

            <TextView
                android:id="@+id/family_name"
                style="@style/tv_account_name"
                android:text="@string/acc_info_family_name" />

            <TextView
                android:id="@+id/tv_family_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/family_name"
                android:text=""
                android:hint="@string/acc_info_not_input"
                android:textSize="@dimen/text_size_15" />

            <!--<ImageView-->
                <!--android:layout_width="48dp"-->
                <!--android:layout_height="36dp"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginRight="16dp"-->
                <!--android:padding="2dp"-->
                <!--android:src="@mipmap/icon_nation_canada" />-->

        </RelativeLayout>

        <View style="@style/h_line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:paddingLeft="@dimen/dp_16">

            <TextView
                android:id="@+id/first_name"
                style="@style/tv_account_name"
                android:text="@string/acc_info_first_name" />


            <TextView
                android:id="@+id/tv_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/first_name"
                android:text="@string/acc_info_not_input"
                android:textSize="@dimen/text_size_15"/>

        </RelativeLayout>

        <View style="@style/h_line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:paddingLeft="@dimen/dp_16">

            <TextView
                android:id="@+id/phone"
                style="@style/tv_account_name"
                android:text="@string/acc_info_phone"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/phone"
                android:text=""
                android:textSize="@dimen/text_size_15"/>

        </RelativeLayout>

        <View style="@style/h_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:paddingLeft="@dimen/dp_16">

            <TextView
                android:id="@+id/email"
                style="@style/tv_account_name"
                android:text="@string/acc_info_email"/>
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/email"
                android:text="@string/acc_info_not_input"
                android:textSize="@dimen/text_size_15"/>

        </RelativeLayout>

        <View style="@style/h_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:paddingLeft="@dimen/dp_16">

            <TextView
                android:id="@+id/deliver_count"
                style="@style/tv_account_name"
                android:text="@string/order_detail_deliver_send"/>
            <TextView
                android:id="@+id/tv_deliver_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/deliver_count"
                android:text=""
                android:textSize="@dimen/text_size_15"/>

        </RelativeLayout>

        <View style="@style/h_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:paddingLeft="@dimen/dp_16">

            <TextView
                android:id="@+id/credibility"
                style="@style/tv_account_name"
                android:text="@string/acc_info_credibility"/>

            <ImageView
                android:id="@+id/credibility_img"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/credibility"
                android:padding="@dimen/dp_4"
                android:src="@mipmap/icon_p_title_shibing" />

            <!--头衔名称-->
            <TextView
                android:id="@+id/tv_credibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/credibility_img"
                android:text=""
                android:layout_marginLeft="@dimen/dp_3"
                android:textSize="@dimen/text_size_15"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@drawable/bottom_shadow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grayLight"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:text="@string/acc_info_comment"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/tv_black_2" />
    </LinearLayout>
</RelativeLayout>
